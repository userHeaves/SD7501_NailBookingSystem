@model Service
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class=" col text-center">
                <h2 class="text-white py-2">Edit Service</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="All"></div>*@
                <div class="mb-3 row p-1">
                    <label asp-for="Type" class="ms-2"> </label>
                    <input asp-for="Type" class="form-control border-0 shadow" />
                    <span asp-validation-for="Type" class="bg-danger text-light"></span>

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Cost" class="ms-2"> </label>
                    <input asp-for="Cost" class="form-control border-0 shadow" />
                    <span asp-validation-for="Cost" class="text-danger"></span>

                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Service" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
