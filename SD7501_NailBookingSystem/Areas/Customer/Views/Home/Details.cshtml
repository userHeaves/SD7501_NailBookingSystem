@model ShoppingCart

<form method="post">
    <input hidden asp-for="ServiceId" />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Service.Type</h3>
                   @*  <p class="text-white-50 fw-semibold mb-0">by @Model.Service.Type</p> *@
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-10 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Service.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
@* 
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model.Service.Booking.Name</span>
                        </div> *@
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">Type : @Model.Service.Type</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Price:
                                <span>
                                    @Model.Service.Cost.ToString("c")
                                </span>
                            </h6>
                        </div>

                            <p class="text-secondary lh-sm">@Html.Raw(Model.Service.Description)</p>
                      
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>AddOns</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Service.Booking.Name</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Service.Booking.BookingOrder.ToString("c")</div>
                            </div>
                        </div>

                        <div class="row pl-2 my-3">
                        </div>

                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-5">
                                    <label asp-for="AddOns" class="input-group-text bg-primary text-white border-0 fw-semibold"
                                           id="inputGroup-sizing-default">
                                        Add Ons
                                    </label>
                                    <select asp-for="AddOns" class="form-select" aria-describedby="inputGroup-sizing-default">
                                        <option value="true">Yes</option>
                                        <option value="false">No</option>
                                    </select>
                                </div>
                            </div>
                        </div>
@* 
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div> *@
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

