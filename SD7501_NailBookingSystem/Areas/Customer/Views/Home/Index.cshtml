@model IEnumerable<Service>

<div class="row pb-3">
    @foreach (var service in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@service.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@service.Type</p>
                                @* <p class="card-title text-warning text-center"><b>@service.Description</b></p> *@
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-info-emphasis">
                                        @service.Cost.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <a asp-action="Details"
                           asp-route-serviceId="@service.Id"
                           class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
